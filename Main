#include <iostream>
#include <string>
#include <array>
#include <fstream>
using namespace std;

class Movie{
    private: 
        string screenWriter;
        int yearReleased;
        string title;
    public:
        //each data member in private these are setters and getters pair
        void setWriter(string writer) {screenWriter = writer;}
        string getWriter() {return screenWriter;}

        void setYear(int year) {yearReleased = year;}
        int getYear() {return yearReleased;}

        void setTitle(string movieTitle) {title = movieTitle;}
        string getTitle() {return title;}
